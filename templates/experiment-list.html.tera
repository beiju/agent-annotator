{% extends "base" %}
{% block title %}Experiments{% endblock title %}
{% block body %}
    <div class="container mt-5">
        <div class="row">
            <h1>Experiments</h1>
            <form action="/list/refresh" method="post">
                <input class="btn" type="submit" value="Refresh experiments list" />
            </form>

            {% if experiments %}
            <ul>
                {% for experiment in experiments %}
                    <li>
                        {{experiment.folder_name}}: {{experiment.num_video_frames}} frames
                        {% if experiment.claimed_by %}
                            <form action="{{experiment.release_uri}}" method="post">
                                <input class="btn btn-outline-primary" type="submit" value="Un-assign Me" />
                            </form>
                        {% else %}
                            <form action="{{experiment.claim_uri}}" method="post">
                                <input class="btn btn-outline-primary" type="submit" value="Start Annotating" />
                            </form>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            {% else %}
            <p>No experiments registered yet</p>
            {% endif %}
        </div>
    </div>
{% endblock body %}
